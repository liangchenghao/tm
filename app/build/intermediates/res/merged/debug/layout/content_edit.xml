<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chenlian.activity.EditActivity"
    android:weightSum="4"
    tools:showIn="@layout/activity_edit">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/light_grey_1"
        android:padding="@dimen/default_padding_top">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/vv_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!--<RelativeLayout-->
            <!--android:id="@+id/rl_picture_or_media"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

            <!--<View-->
                <!--android:id="@+id/center_view"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_centerVertical="true" />-->

            <ImageView
                android:id="@+id/iv_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/g18" />

            <!--<ImageView-->
                <!--android:id="@+id/iv_camera"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toEndOf="@id/center_view"-->
                <!--android:layout_toRightOf="@id/center_view"-->
                <!--android:src="@drawable/g17" />-->
        <!--</RelativeLayout>-->
    </FrameLayout>

    <include layout="@layout/toolbar_shadow_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding_top"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mdt_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="在这里输入内容..."
                android:lineSpacingExtra="4dp"
                app:met_hideUnderline="true"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
